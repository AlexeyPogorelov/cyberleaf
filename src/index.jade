doctype html
html(lang='en')
	head
		title Cyber Leaf Community

		include ./partials/head.jade

	body

		include ./partials/noscript.jade

		.background-holder
			canvas#hero-canvas.hero-canvas

		section#main.hero-section
			.container
				.content-holder
					h1 Cyber Leaf Community
					h2 (WEB development, UI/UX)

		include ./partials/navigation.jade

		section#services.services-section
			.container
				h2 What we can do for you
				ul.services-list
					mixin service (header, description)
						li
							h4!= header
							p!= description

					+service(
						'test',
						'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid mollitia sit, assumenda et vel doloremque delectus accusamus, illum culpa. Exercitationem non reprehenderit iure placeat minima omnis nisi aliquam, ad vel?'
					)

		section#portfolio.portfolio-section
			.container
				h2 We are proud of our work
				ul.portfolio-items
					mixin portfolio (img, name, link)
						if img
							li
								a(href= link ? link : "")
									.image-holder
										img(src= img ? img : "img/content/gray-holder.svg", alt= name)
									.text-holder
										p!= name

		section#about.about-section
			.container
				p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nostrum dolorum reiciendis quas voluptatum odit molestiae perferendis placeat iste totam beatae numquam, veritatis repellendus nihil nam officia eius. Consequuntur, iure, deserunt?

		section.advantages-section
			.container
				h2 Our advantages
				ul.advantages-list
					mixin advantage (header, description)
						li
							h4!= header
							p!= description

					+advantage(
						'test',
						'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid mollitia sit, assumenda et vel doloremque delectus accusamus, illum culpa. Exercitationem non reprehenderit iure placeat minima omnis nisi aliquam, ad vel?'
					)

		section#team.team-section
			.container
				h2 Faces behind the scenes
				ul.team-list
					mixin developer (img, name, link)
						if name
							li
								a(href= link ? link : "")
									.image-holder
										img(src= img ? img : "img/content/gray-holder.svg", alt= name)
									.text-holder
										p!= name

					+developer(
						'img/content/gray-holder.svg',
						'Dev',
						'dev-page.html'
					)

					+developer(
						'img/content/gray-holder.svg',
						'Nerd',
						'dev-page.html'
					)

					+developer(
						'img/content/gray-holder.svg',
						'Fancy chick',
						'dev-page.html'
					)

					+developer(
						'img/content/gray-holder.svg',
						'Bully',
						'dev-page.html'
					)


		section#contact.contact-section
			.container
				h2 Get in touch
				form.form-content(action="#")
					input(type="email" placeholder="Email")
					input(type="text" placeholder="Name")
					textarea(placeholder="Enter your message")
					button(type="submit") Send

		include ./partials/modals.jade

	include ./partials/scripts.jade
